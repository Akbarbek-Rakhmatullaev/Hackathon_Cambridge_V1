<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Cambridge_V1.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.Cambridge_V1.ButtonDimens" parent="Theme.Cambridge_V1.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.Cambridge_V1.RoundedButton" parent="Theme.Cambridge_V1.ButtonDimens">
        <item name="shapeAppearanceOverlay">@style/Theme.Cambridge_V1.RoundedButton</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="Theme.Cambridge_V1.RoundedView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>
</resources>