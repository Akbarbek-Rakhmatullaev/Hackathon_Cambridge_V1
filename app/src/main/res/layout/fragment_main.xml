<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_fragment_checker_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green"
        android:elevation="2dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/project_name"
            android:textSize="48sp"
            android:textColor="@color/white"/>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/main_fragment_main_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/main_fragment_mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/main_fragment_position_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            app:icon = "@drawable/ic_navigation"
            app:iconGravity = "textStart"
            app:iconPadding="0dp"
            android:layout_above="@+id/main_fragment_sheet_holder"
            style="@style/Theme.Cambridge_V1.RoundedButton"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="84dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_main_search_editText_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/primary_green"
            app:boxStrokeWidth="1dp"
            android:hint="@string/search"
            app:hintTextColor="@color/primary_green"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/primary_green"
            app:endIconMode="clear_text"
            app:endIconTint="@color/primary_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_main_search_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp"
            android:background="@color/semi_primary_grey"
            android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/main_fragment_sheet_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:elevation="1dp">
            <RelativeLayout
                android:id="@+id/main_fragment_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:background="@drawable/rounded_corners"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_name"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@color/primary_green"/>

            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>

</RelativeLayout>