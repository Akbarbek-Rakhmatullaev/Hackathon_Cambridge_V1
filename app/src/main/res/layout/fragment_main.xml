<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_fragment_checker_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green"
        android:elevation="2dp"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/project_name"
            android:textSize="48sp"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_fragment_main_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/main_fragment_mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/main_fragment_position_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            app:icon = "@drawable/ic_navigation"
            app:iconGravity = "textStart"
            app:iconPadding="0dp"
            android:layout_above="@+id/main_fragment_sheet_holder"
            style="@style/Theme.Cambridge_V1.RoundedButton"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="124dp"/>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/main_fragment_sheet_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:elevation="1dp">
            <RelativeLayout
                android:id="@+id/main_fragment_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center|top"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:background="@drawable/rounded_corners">
                <LinearLayout
                    android:id="@+id/main_fragment_point_info_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:gravity="center|top">
                    <TextView
                        android:id="@+id/main_fragment_point_name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/main_fragment_point_address_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/main_fragment_point_company_name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/main_fragment_point_working_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:id="@+id/main_fragment_point_details_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp">
                        <ExpandableListView
                            android:id="@+id/main_fragment_point_categories_listView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>

</RelativeLayout>